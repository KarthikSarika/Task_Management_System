{% extends "layouts/base.njk" %}

{% block content %}
<div class="max-w-2xl mx-auto text-center py-20">
    <div class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mb-8 mx-auto">
        <i data-lucide="alert-triangle" class="w-10 h-10 text-red-600 dark:text-red-400"></i>
    </div>
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Something went wrong</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-10">
        We encountered an error while processing your request. Please try again later.
    </p>
    
    {% if error %}
    <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg text-left mb-10 overflow-auto max-h-60">
        <code class="text-sm text-gray-700 dark:text-gray-300">{{ error.message }}</code>
    </div>
    {% endif %}

    <a href="/" class="px-8 py-3 bg-indigo-600 text-white rounded-lg font-bold hover:bg-indigo-700 transition">
        Back to Home
    </a>
</div>
{% endblock %}
